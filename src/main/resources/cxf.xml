<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 xmlns:jaxrs="http://cxf.apache.org/jaxrs"
 xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://cxf.apache.org/jaxrs
                        http://cxf.apache.org/schemas/jaxrs.xsd">
 
 <import resource="classpath:META-INF/cxf/cxf.xml" />
 
 
 
 <bean id="pdfboxService" class="com.pdftransformation.services.PDFBoxService" />
 
 <bean id="pdfeditorService" class="com.pdftransformation.services.PDFEditorServices" />
 
 
 <bean id="jsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider">
 </bean> 
 
 <bean id="dispatchProvider" class="org.apache.cxf.jaxrs.provider.RequestDispatcherProvider">
      <property name="classResources">
         <map>
            <entry key="com.pdftransformation.domain.output.Outputs" value="/pdfOutput.jsp"/>
            <entry key="com.pdftransformation.domain.output.PageOutputs" value="/pdfTemplateEditor.jsp"/>
         </map>
      </property>
      <property name="beanNames">
          <map>
             <entry key="com.pdftransformation.domain.output.Outputs" value="outputs"/>
             <entry key="com.pdftransformation.domain.output.PageOutputs" value="pageOutputs"/>
          </map>
      </property>
 </bean>
 
 <jaxrs:server id="userRestfulWebService" address="/rest/">
  
  <jaxrs:serviceBeans>
    <ref bean="pdfeditorService" />
    <ref bean="pdfboxService" />
  </jaxrs:serviceBeans>
  
	<jaxrs:providers>
            <ref bean="jsonProvider"/>
            <ref bean="dispatchProvider"/>
    </jaxrs:providers>
    
   
        
 </jaxrs:server>
 
</beans>